<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Sign in", :class => 'btn-success' %> or 
  <%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
